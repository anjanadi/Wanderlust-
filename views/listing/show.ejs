  <div class="row mt-3">
    <div class="col-8 offset-3">
      <div class="card col-6 offset-3 show-card">
        <h3>
          <%=listing.title%>:
        </h3>
        <img class="card-img-top show-img" src="<%=listing.image%>" alt="Card image cap">
        <div class="card-body">

          <li>
            <%=listing.description%>
